service cloud.firestore {
  match /databases/{database}/documents {

    // ๐ข ุงูุณูุงุญ ุจุงููุฑุงุกุฉ ูุงููุชุงุจุฉ ููุท ูููุณุชุฎุฏููู ุงููุณุฌููู
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // ๐ด ูุงุนุฏุฉ ุฎุงุตุฉ: ุจูุงูุงุช ุงููุณุชุฎุฏููู ุชููู ูุญููุฉุ ููุง ูููู ุชุนุฏูููุง ุฅูุง ูู ูุจู ููุณ ุงููุณุชุฎุฏู
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ๐ด ูุงุนุฏุฉ ุฎุงุตุฉ: ูููู ูุฃู ูุณุชุฎุฏู ูุฑุงุกุฉ ุจูุงูุงุช ุงูุจุงุตุงุชุ ููู ูุง ูุณุชุทูุน ุงูุชุนุฏูู ุฅูุง ุงููุดุฑููู ุฃู ุงูุณุงุฆููู
    match /buses/{busId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role in ["admin", "driver"];
    }

    // ๐ด ูุงุนุฏุฉ ุฎุงุตุฉ: ูููู ููุฃูุงูู ูุฑุงุกุฉ ุจูุงูุงุช ุฃุจูุงุฆูู ููุท
    match /students/{studentId} {
      allow read: if request.auth.token.role == "parent" && request.auth.token.childId == studentId;
      allow write: if request.auth.token.role == "admin";
    }
  }
}